<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Don't rewrite actual files or directories that exist
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Capture special actions (download, open) with the path
    RewriteCond %{REQUEST_URI} /\+download/(.*)$
    RewriteRule ^(.+)\+download/(.*)$ index.php [L]
    RewriteCond %{ENV:REWRITE_PATH} ^$
    RewriteRule ^(.+)\+download/(.*)$ - [E=REWRITE_PATH:$1,E=REWRITE_ACTION:download]
    
    RewriteCond %{REQUEST_URI} /\+open/(.*)$
    RewriteRule ^(.+)\+open/(.*)$ index.php [L]
    RewriteCond %{ENV:REWRITE_PATH} ^$
    RewriteRule ^(.+)\+open/(.*)$ - [E=REWRITE_PATH:$1,E=REWRITE_ACTION:open]
    
    # Default: rewrite everything else to index.php
    RewriteRule ^(.*)$ index.php [L]
    RewriteCond %{ENV:REWRITE_PATH} ^$
    RewriteRule ^(.*)$ - [E=REWRITE_PATH:$1]
</IfModule>

