<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Don't rewrite actual files that exist
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]
    
    # Extract action from URL: /path/+download or /path/+open
    RewriteRule ^(.+)\+download/?$ index.php?path=$1&action=download [L,QSA]
    RewriteRule ^(.+)\+open/?$ index.php?path=$1&action=open [L,QSA]
    
    # Default: rewrite everything else to index.php with path parameter
    # But don't rewrite index.php itself
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !^/index\.php
    RewriteRule ^(.+)$ index.php?path=$1 [L,QSA]
</IfModule>

