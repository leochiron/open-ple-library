<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Don't rewrite index.php itself or actual files
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]
    
    # Don't rewrite the index.php file
    RewriteCond %{REQUEST_URI} =/index.php
    RewriteRule ^ - [L]
    
    # Extract action from URL if present: /path/+download or /path/+open
    RewriteCond %{REQUEST_URI} !\+download/?$
    RewriteCond %{REQUEST_URI} !\+open/?$
    RewriteRule ^(.+)\+download/?$ index.php?path=$1&action=download [L,QSA]
    RewriteRule ^(.+)\+open/?$ index.php?path=$1&action=open [L,QSA]
    
    # Default: rewrite all other requests to index.php with path parameter
    RewriteCond %{REQUEST_URI} !^/index\.php
    RewriteRule ^(.*)$ index.php?path=$1 [L,QSA]
</IfModule>

