<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Don't rewrite actual files or directories that exist
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Capture the requested path and pass it to index.php
    # Everything that isn't a file/directory goes to index.php with REWRITE_PATH env variable
    RewriteRule ^(.*)$ index.php [L]
    RewriteCond %{ENV:REWRITE_PATH} ^$
    RewriteRule ^(.*)$ - [E=REWRITE_PATH:$1]
</IfModule>

